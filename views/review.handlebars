{{! Reviews }}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Review</title>              
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
</head>


<body>

<header class="text-center mt-3" style="background-color: #080720; padding: 30px; margin: 100px;">


        {{! REVIEWS HEADER }}
        <h1>How Did Your Date Go?</h1>

        <br>

        <h2>Leave A Review And Select An HTTP Status Badge For User:</h2>

    </header>

    <main class="container mt-4">

        {{! REVIEW FORM}}
        <section class="review-form">


            {{! USER ABLE TO WRITE REVIEW }}
            <div class="mb-3">

                <label for="Review_text" class="form-label" style="font-size: 40px;">How Was Your Experience?</label>

                <textarea class="form-control" id="Review_text" style="height: 250px;"></textarea>

             

            </div>

         


                {{! HTTP STATUS BADGE SELECTION }}  
                <div class="mb-3">

                <label for="reviewBadge" class="form-label" style="font-size: 40px;">Choose A Status Code Badge:</label>

                <select class="form-select" id="reviewBadge" style="height: 75px;">

                {{#each statusCodes}}

                <option value="{{this.code}}">{{this.name}}</option> 

                {{/each}}

                </select>

                </div>


                {{! SUBMIT BUTTON }}
                <a href="/submitReviews" class="btn btn-primary">Submit HTTP Status Badge</button>



        </section>   

        {{> footer}}

    </main>

</body>
</html>