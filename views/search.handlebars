{{! SEARCH }}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Search</title>
         {{! BOOTSTRAP LINK}}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="../public/css/styles.css">    {{! LINKED STYLES SHEET IN PUBLIC FOLDER }}
</head>
<body>
  

{{! WE DONT HAVE TO GO WITH THIS FORMAT .. THIS IS JUST AN IDEA BEFORE WE START RUNNING OUT OF TIME .. SO THIS IS JUST A SUPER BASIC FORMAT TO HAVE SOMETHING ON PAGE }}

{{#if searchResults}}

{{! CONTAINER SEARCH RESULTS }}

  <div class="container mt-4">

    <h2 class="mb-3">Search Results:</h2>

    <ul class="list-group">

      {{#each searchResults}}

      {{! LIST FOR EACH RESULT }}

        <li class="list-group-item">

          <a href="/userProfile/{{this.id}}" class="text-primary">{{this.display_name}}</a>

        </li>

      {{/each}}

    </ul>

  </div>

{{else}}

{{! DISPLAY MESSAGE IF NO RESULTS FOUND }}

  <p class="mt-4">No results found.</p>

{{/if}}