<!-- views/signup.handlebars -->
<body >
    <header>

            {{!-- NAVBAR --}}
            {{> navbar}}

    </header>
<div class="container-lg d-flex w-100  p-3  flex-column">
    <section >
            <form action="#" class="input-group-sizing">
                <div class="row" style="display: table-column;">
                    <div class="w-50  col">
                        <label for="display-name-login" alt="first name" require> user name</label>
                        <input class="form-input form-control" type="text" id="display-name" style="margin-bottom: 8px;"/>
                    </div>

                    <div class="w-50  col" >
                            <label class=
                            "col-form-label" for="pronouns" alt="your pronouns" require>my pronouns:</label>
                            <input class="form-input form-control" list="pronouns" name="pronouns" type="text" id="my-pronouns" require/>
                            <datalist id="pronouns">
                                <option>she/her</option>
                                <option>he/him</option>
                                <option>they/them</option>
                                <option>non-binary</option>
                            </datalist>
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 w-50 p-3">
                        <label for="email-login" alt="email" require>email</label>
                        <input class="form-input form-control" type="text" id="email-login" />
                    </div>
                
                    <div class="mb-3 w-50 p-3">
                        <label for="password" require>password</label>
                        <input class="form-input form-control"type="password" id="password-login" placeholder="min 8 charr"="8" required />
                    </div>
                        
                </div>
                <div class="row">
                    <div class="mb-3 w-50 p-3">
                        <label class="age-signup ">age</label>
                        <input  class="form-control" type="number" min="15" max="200">
                    </div>
                    <div class="mb-3 w-50 p-3" >
                        <label>my operating system</label>
                        <select class="form-select form-select-md" aria-label="Default select example">
                            <option>Mac OS</option>
                            <option>Windows</option>
                            <option>Linux</option>
                    
                        </select>
                    </div>
                </div>
            <div class="row justify-content-md-center">
                <div class="mb-3 w-50 p-3 form-check">
                    <label>my programing languages:</label>
                    
                    <div class="col">
                    <input  type="radio" id="lang-html" name="language">
                    <label  for="html">html</label>
                    <input type="radio" id="lang-css" name="language">
                    <label for="css">css</label>
                    <input type="radio" id="lang-javaScript" name="language">
                    <label for="javascript">javaScript</label>
                    <input type="radio" id="lang-python" name="language">
                    <label for="python">python</label>
                    </div>
                   
                    <div class="col">
                    <input type="radio" id="lang-C++" name="language">
                    <label for="c++">C++</label>
                    <input type="radio" id="lang-php" name="language">
                    <label for="php">php</label>
                    <input type="radio" id="lang-SQL" name="language">
                    <label for="sql">SQL</label>
                    <input type="radio" id="lang-Java" name="language">
                    <label for="java">Java</label>
                    </div>
                    
                    <div class="col justify-content-center">
                    <input type="radio" id="lang-Swift" name="language">
                    <label for="swift">Swift</label>
                    <input type="radio" id="lang-Perl" name="language">
                    <label for="perl">Perl</label>
                    <input type="radio" id="lang-C#" name="language">
                    <label for="c#">C#</label>
                    <input type="radio" id="lang-TypeScript" name="language">
                    <label for="typescript">TypeScript</label>
                    </div>

                </div>
                <div class="mb-3 w-50 p-3">
                    <label>my personality type:</label>
                    <br>
                    <input type="radio" name="personality" id="introvert">
                    <label for=""introvert>introvert</label>
                    <br>
                    <input type="radio" name="personality" id="extrovert">
                    <label for=""extrovert>extrovert</label>
                </div>
            </div>
            <div class="row">
                <div class="mb-3 w-50 p-3">
                <label style="display:grid;">Bio</label>
                <textarea id="bio" name="my bio" type="text" rows="6" cols="36" ></textarea>
                </div>
                <div class="mb-3 w-50 p-3">
                    <label style="display:grid;">Hobbies:</label>
                    <textarea id="my-hobbies" type="text" rows="6" cols="36" ></textarea>

                </div>
                <div class="">
                    <button class="btn btn- btn-light fw-bold border-white bg-white" type="submit">sign up</button>
                </div>
            </div>
            </form>
            </section>

</div>

</body>