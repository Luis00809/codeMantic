                {{!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> --}}
                <p class="card-text text-start">Personal Pronouns: {{user.pronouns}}</p>
                <p class="card-text text-start">Partner Pronouns: {{user.form.partner_pronouns}}</p>
            
                  <p class="card-text text-start">Age: {{user.age}}</p>

                  <p class="card-text text-start">Operating System: {{user.form.operating_system}}</p>
                  
                  <p class="card-text text-start">Programing Languages: {{user.form.languages}}</p>
                
                  <ul class="Languages">
                    {{#each languages}}
                    <li>{{this}}</li>
                    {{/each}}
                  </ul>
                  <p class="card-text text-start">Personality type: {{user.form.personality_type}}</p>
                  <p class="card-text text-start">Hobbies:{{user.form.hobbies}}</p>
                  <ul class="hobbies">
                    {{#each hobbies}}
                    <li>{{this}}</li>
                    {{/each}}
                  </ul>
                  <p class="card=text text-start">Bio: {{user.form.bio}}</p>
                  <dataset >
                    <p class="card-text text-start">Contact Me: {{user.form.contact_method}}</p>

              </div>
        </div>
    </div>
  </div>

</body>
    
